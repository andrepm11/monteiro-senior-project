<body>
  

	<link rel="stylesheet" href="https://use.typekit.net/cie4idu.css">
	<link rel="stylesheet" href="/css/cart.css">


	<div class="container-fluid">
		<div class="row" style="background-color:#F2F4F5;">
			<div class="col-12">
				<p class="text-center mb-0 pt-1 pb-1" style="font-size:0.9em;"><i>A senior project in Computer Science by Andr√© Monteiro.</i></p>
			</div>
		</div>
	</div>

	<div class="container-fluid">

		<div class="row pt-4 pb-1">
			<div class="col-12">
				<h2 class="text-center title"><a href="/">$anitize It</a></h2>
			</div>
		</div>
	<% if(items && items[0]){ %>
	  <div id="cart" style="display:block;">
	<%} else {%>
	  <div id="cart" style="display:none;">
	<%}%>
	  <form id="cart-form">
		<div class="row pl-md-5 pr-md-5">

			<div id="cart-section" class="col-12 col-md-5 order-md-2 pb-3">
			</div>

			<div id="checkout" class="pb-5 col-12 col-md-7 order-md-1">
				
				<h2 class="cart-header offset-1 col-10 pl-0 pr-0 h4">Your Info</h2>
				<div class="col-10 pl-0 pr-0 offset-1">
					<div class="row pb-2">
						<div class="col-12">
							<input id="email" type="email" class="form-control" name="email" value="<%= email %>" required placeholder="E-mail">
						</div>
					</div>
					<div class="row pb-2">
						<div class="col-sm-6 col-12 pb-lg-0 pb-2">
							<input autocomplete="given-name" autocapitalize="words" id="firstName" name="firstName" class="form-control" type="text" placeholder="First Name" required value="<%= firstName %>">
						</div>
						<div class="col-sm-6 col-12 pb-lg-0">
							<input autocapitalize="words" id="lastName" name="lastName" class="form-control" type="text" placeholder="Last Name" required value="<%= lastName %>">
						</div>
					</div>
				</div>

				<h2 class="cart-header offset-1 col-10 pl-0 pr-0 h4 pt-3">Mobile Phone Number</h2>

				<div class="col-10 pl-0 pr-0 offset-1">
					<div class="row pb-2">

						<div class="col-12">
							<div id="phone-alert" class="alert-div">
							</div>
							<input id="phone" autocomplete="user-phone" required type="tel" class="form-control" name="phone" value="+1 (<% if(phone && phone.length>10){ %><%= phone.substr(4) %><% } else if(phone && phone.length==10){ %><%=phone%><%}%>" <% if(query.phone){%>readonly<%} %> data-next="payment-shipping" placeholder="Mobile Phone Number">
						</div>
					</div>
				</div>

				<h2 class="cart-header offset-1 col-10 pl-0 pr-0 h4 pt-3">Shipping</h2>
				<div class="col-10 pl-0 pr-0 offset-1">
					<!-- <div class="row">
						<div class="col-8 offset-1">
							<label><input type="radio" name="shipping" checked="checked" value="ground" data-div="shipping-ground"> Ground Shipping</label>
						</div>
					</div>
					<div class="row">
						<div class="col-8 offset-1">
							<label><input type="radio" name="shipping" value="campus" data-div="shipping-school"> Campus Pick-up</label>
						</div>
					</div> -->
					<div class="shipping-div" id="shipping-ground">
						<div class="row pb-2">
							<div class="col-sm-8 col-12 pb-lg-0 pb-2">
								<input id="address1" autocapitalize="words" required type="text" class="form-control address-field" name="address1" value="<%= address1 %>" placeholder="Address">
							</div>
							<div class="col-sm-4 col-12 pb-lg-0">
								<input id="address2" autocapitalize="words" type="text" class="form-control address-field" name="address2" value="<%= address2 %>" placeholder="Apt, suite">
							</div>
						</div>
						<div class="row pb-2">
							<div class="col-12">
								<input id="city" autocapitalize="words" required type="text" class="form-control address-field" name="city" value="<%= city %>" placeholder="City">
							</div>
						</div>
						<div class="row pb-2">
							<div class="col-sm-8 col-12 pb-lg-0 pb-2">
								<input autocapitalize="characters" id="state" required type="text" class="form-control address-field" name="state" value="<%= state %>" placeholder="State">
							</div>
							<div class="col-sm-4 col-12 pb-lg-0">
								<input id="zip" required type="number" pattern="\d*" class="form-control address-field" name="zip" value="<%= zip %>" placeholder="Zip Code">
							</div>
						</div>
					</div>
				</div>

				<h2 class="cart-header col-10 pl-0 pr-0 offset-1 h4 pt-3">Payment Info</h2>
				<div class="col-10 offset-1 pb-3">
					<div class="row">
							<div id="card-errors" class="small text-danger" style="display: inline-block" role="alert">
								<% if(error){ %>
									<span><%= error %></span>
								<% } %>
							</div>
							<div class="form-control mb-3" id="card-element">
							</div>
						<div id="place-order-alert" class="alert-div">
						</div>
					</div>

				</div>

				<div class="row mb-5 pb-5 mb-md-0 pb-md-0">
					<div class="col-10 offset-1 text-center">
						<button id="complete-order" class="btn cart-buttons mb-3"><strong>PLACE ORDER</strong></button>
					</div>
				</div>
			</div>
		</div>
	  </form>
	  </div>
	  <% if(items && items[0]){%>
	  	<div id="no-cart" class="mb-5 pb-5" style="display:none;">
	  <%} else {%>
	  	<div id="no-cart" class="mb-5 pb-5" style="display:block;">
	  <% } %>
	  	<div class="row mb-3">
	  		<div class="col-12">
	  			<h4 class="cart-header text-center">Please add something to your cart before checking out.</h4>
	  			<h4 class="cart-header text-center"><a href="/#OrderVerb">Go home</a></h4>
	  		</div>
	  	</div>
	  </div>

	  <div id="payment-complete" class="mb-5 pb-5" style="display:none;">
	  	<div class="row mb-3">
	  		<div class="col-12">
	  			<h4 class="cart-header text-center">Thanks so much for your order!</h4>
	  		</div>
	  	</div>
	  	<div class="row">
	  	<div class="col-12">
	  		<h4 class="cart-header text-center mb-3">Your payment is complete!</h4>
	  	</div>
	  	</div>
	  </div>
	</div>
	<div class="loader" id="loading-indicator" style="display:none;"></div>

    <script>
    	var shipping = '<%= shipping %>';
    </script>

    <% if(items && items[0]){ %>
		<script src="/js/main-cart.js"></script>
	<% } %>

</div>
</div>
</body>
