<% include partials/header %>

<!-- Edit
 -->
<div class="container">
    <div class="row">
        <div class="col-sm-8">
            <h1><%= found.plan.name %></h1>
            <div class="well container col-sm-12">
                <h2>Subscription Details</h2>
                <div class="well">
                    <h3>Subscriber</h3>
                    <p><%= found.user.billingAddress.name %></p>
                    <h3>Email</h3>
                    <p><%= found.user.email %></p>
                    <h3>Status</h3>
                    <p><%= found.status %></p>
                </div>
                <div class="well">
                    <h3>Plan</h3>
                    <h4>Name</h4>
                    <p><%= found.plan.name %></p>
                    <h4>ID</h4>
                    <p><%= found.plan.id %></p>
                    <h4>Interval</h4>
                    <p>Every <%= found.plan.intervalCount %> <%= found.plan.interval %></p>
                    <h4>Amount</h4>
                    <p><%= found.plan.amount %></p>
                    <h4>Quantity</h4>
                    <p><%= found.plan.quantity %></p>
                    <h4>Total Amount</h4>
                    <p><%= found.plan.totalAmount %></p>
                </div>
                
            </div>
        </div>
        <div class="well col-sm-4">
            <h2>Information</h2>
            <hr>
            <h3>Billing Address</h3>
            <table>
                <tbody>
                    <% var addressKeys = ['name','address1','address2','company','city','state','zip','country','phone'];
                       addressKeys.forEach(function(key){ %>
                           <tr>
                               <td><%= key %> : </td><td><%= found.user.billingAddress[key] %></td>
                           </tr>
                       <% }); %>

                </tbody>
                
            </table>
            <hr>
            <h3>Shipping Address</h3>
            <div>
                <p><%= found.user.shippingAddress['name'] %></p>
                <p><%= found.user.shippingAddress['address1'] %></p>
                <% if(found.user.shippingAddress['address2']){ %>
                    <p><%= found.user.shippingAddress['address2'] %></p>
                <% } %>
                <p><%= found.user.shippingAddress['city'] %>, <%= found.user.shippingAddress['state'] %> <%= found.user.shippingAddress['zip'] %></p>
            </div>
            <!-- <table>
                <tbody>
                    <% addressKeys.forEach(function(key){ %>
                           <tr>
                               <td><%= key %> : </td><td><%= found.user.shippingAddress[key] %></td>
                           </tr>
                       <% }); %>

                </tbody>
                
            </table> -->
        </div>
    </div>
    <div class="row">
        <div class="well col-sm-8">
            <h3>Invoices</h3>
            <% found.invoices.forEach(function(invoice){ %>
                <p><a href="/orders/<%= invoice.invoiceNumber %>"><%= invoice.invoiceNumber %></a></p>
            <% }); %>
        </div>
    </div>
</div>





<% include partials/footer %>